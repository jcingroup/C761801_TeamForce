@{
    ViewBag.Title = "聯絡我們";
    ViewBag.BodyClass = "Contact";
}

<div class="headLine"></div>
<div class="wrap @(ViewBag.BodyClass)">
    <h2 class="mt-64">聯絡我們</h2>
    <h3>CONTACT US</h3>
    <div class="col-6 contactBoxArea">
        <div class="mb-32 col-6 pull-left contactBox">
            <div class="circle">
                <img src="~/Content/images/phone.png" onclick=""/>
            </div>
            <nobr class="mt-24 font-lg"><a href="tel:03-4670099">(03)4670099</a></nobr>
        </div>
        <div class="mb-32 col-6 pull-left contactBox">
            <div class="circle">
                <img src="~/Content/images/fax.png" />
            </div>
            <nobr class="mt-24 font-lg"> <a href="tel:03-4670098">(03)4670098</a></nobr>
        </div>
        <div class="mb-32 col-6 pull-left contactBox">
            <div class="circle">
                <img src="~/Content/images/email.png" />
            </div>
            <nobr class="mt-24 font-lg"><a href="mailto:team.force@msa.hinet.net">team.force@msa.hinet.net</a></nobr>
        </div>
        <div class="mb-32 col-6 pull-left contactBox">
            <div class="circle">
                <img src="~/Content/images/location.png" />
            </div>
            <nobr class="mt-24 font-lg"><a href="https://www.google.com.tw/maps/place/桃園市平鎮區振平街252號" target="_blank">桃園市平鎮區振平街252號</a></nobr>
        </div>
    </div>
    <div class="contactLine mt-64 pull-left"></div>
    <iframe id="map" class="col-5 contactMap pull-right" src="~/Content/images/map.html"></iframe>
</div>
@section scripts {
    <script>
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 24.9569823, lng: 121.2237644 },
                zoom: 17,
            });
            var marker = new google.maps.Marker({
                position: { lat: 24.957167, lng: 121.223410 },
                map: map,
                title: '挺鋒電檢'
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqungKTm3kuv-i2SPzOSxaUtqieOdRZPQ&callback=initMap"type="text/javascript"></script>
}